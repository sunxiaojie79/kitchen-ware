
.container {
  background-color: #000;
  min-height: 100vh;
}
.message-list {
  padding: 20rpx;
}
.message-item {
  background-color: #1a1a1a;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}
.message-text {
  color: #fff;
  font-size: 28rpx;
}
.message-time {
  color: #666;
  font-size: 24rpx;
  margin-top: 10rpx;
  display: block;
}
